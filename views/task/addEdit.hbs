<h2>{{viewTitle}}</h2>

<form action="{{route}}" autocomplete="off" method="{{method}}">
  <div class="form-group">
    <label for="fname">Task name:</label><br />
    <input type="text" id="fname" name="taskName" value="{{taskName}}" /><br />
  </div>
  <div class="form-group">
    <label for="lname">Task Description:</label><br />
    <input type="text" id="lname" name="taskDesc" value="{{taskDesc}}" /><br
    /><br />
  </div>

  <button type="submit" class="btn">Submit</button>

</form>

<a href="/task/all">Cancel</a>