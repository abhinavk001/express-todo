<div class="container flex align-center justify-center">

  <div
    class="w-full max-w-md p-8 space-y-3 rounded-xl dark:bg-coolGray-900 dark:text-coolGray-100"
  >
    <h1 class="text-2xl font-bold text-center">Sign Up</h1>
    <form
      action="/task/signup"
      class="space-y-6 ng-untouched ng-pristine ng-valid"
      data-bitwarden-watching="1"
      method="post"
    >
      <div class="space-y-1 text-sm">
        <label for="email" class="block dark:text-coolGray-400">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="email"
          class="w-full px-4 py-3 rounded-md dark:border-coolGray-700 dark:bg-coolGray-900 dark:text-coolGray-100"
          required
        />
      </div>
      <div class="space-y-1 text-sm">
        <label
          for="username"
          class="block dark:text-coolGray-400"
        >Username</label>
        <input
          type="text"
          name="username"
          id="username"
          placeholder="Username"
          class="w-full px-4 py-3 rounded-md dark:border-coolGray-700 dark:bg-coolGray-900 dark:text-coolGray-100"
          required
        />
      </div>
      <div class="space-y-1 text-sm">
        <label
          for="password"
          class="block dark:text-coolGray-400"
        >Password</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="Password"
          class="w-full px-4 py-3 rounded-md dark:border-coolGray-700 dark:bg-coolGray-900 dark:text-coolGray-100"
          required
        />
      </div>
      <div class="space-y-1 text-sm">
        <label
          for="confirm-password"
          class="block dark:text-coolGray-400"
        >Confirm Password</label>
        <input
          type="password"
          name="confirm-password"
          id="confirm-password"
          placeholder="Password"
          class="w-full px-4 py-3 rounded-md dark:border-coolGray-700 dark:bg-coolGray-900 dark:text-coolGray-100"
          required
        />
      </div>
      <button
        class="block w-full p-3 text-center rounded-sm text-coolGray-50 bg-violet-600"
        type="submit"
      >Sign up</button>
    </form>
    <p class="text-xs text-center sm:px-6 dark:text-coolGray-400">Already have
      an account?
      <a
        rel="noopener noreferrer"
        href="/task/login"
        class="underline dark:text-coolGray-100"
      >Login</a>
    </p>
  </div>
  <script>
    var password = document.getElementById("password"); var confirm_password =
    document.getElementById("confirm-password"); function validatePassword(){
    if(password.value != confirm_password.value) {
    confirm_password.setCustomValidity("Passwords Don't Match"); } else {
    confirm_password.setCustomValidity(''); } } password.onchange =
    validatePassword; confirm_password.onkeyup = validatePassword;
  </script>
</div>